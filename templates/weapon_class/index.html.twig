    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for weapon_class in weapon_classes %}
            <tr>
                <td>{{ weapon_class.id }}</td>
                <td>{{ weapon_class.name }}</td>
                <td>
                    <a href="{{ path('weapon_class_show', {'id': weapon_class.id}) }}">show</a>
