<form method="post" action="{{ path('item_inventory_delete', {'id': item_inventory.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ item_inventory.id) }}">
    <button class="btn">Delete</button>
</form>
